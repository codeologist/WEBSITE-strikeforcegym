html
    head

        <meta charset="utf-8">
        <title>Strikeforce Gym</title>
        <meta name="description" content="">
        <meta name="keywords" content="Muay Thai, MMA, Kickboxing">
        include ../include/head.jade


        <!-- Css -->
        <link href="css/auckland.css" rel="stylesheet" type="text/css" />
    body
        header
            h1 Strikeforce Auckland
            include ../include/tagline.jade

        nav#menu
            ul
                li
                    a(href="/") home
                li
                    a(href="#timetable") timetable
                li
                    a(href="#prices") pricing
                li
                    a(href="#contact") address
                include ./signup.jade
                include ./fblink.jade
                include ./phonelink.jade

        section#timetable
            <a name="timetable"></a>
            div
                h2 Timetable

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday MONDAY
                    tbody
                        tr
                            td 6.00pm
                            td Fighters Muay Thai
                        tr
                            td 7.00pm
                            td Beginners Muay Thai
                        tr
                            td 8.00pm
                            td MMA

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday TUESDAY
                    tbody
                        tr
                            td 5.00pm
                            td Kids Muay Thai
                        tr
                            td 6.00pm
                            td Fighters Muay Thai
                        tr
                            td 7.30pm
                            td Grappling Open Mat &nbsp;(open to NON-MEMBERS, free of charge)

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday WEDNESDAY
                    tbody
                        tr
                            td 5.00pm
                            td Kids Muay Thai
                        tr
                            td 6.00pm
                            td Fighters Muay Thai
                        tr
                            td 7.00pm
                            td Beginners Muay Thai
                        tr
                            td 8.00pm
                            td MMA

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday THURSDAY
                    tbody
                        tr
                            td 5.00pm
                            td Kids Muay Thai
                        tr
                            td 6.00pm
                            td Fighters Muay Thai
                        tr
                            td 7.30pm
                            td Grappling Open Mat &nbsp;(open to NON-MEMBERS, free of charge)

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday FRIDAY
                    tbody
                        tr
                            td 6.00pm
                            td Fighters Muay Thai
                        tr
                            td 7.00pm
                            td Beginners Muay Thai

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday SATURDAY
                    tbody
                        tr
                            td 10.00pm
                            td Women's only Kickboxing
                        tr
                            td 3.00pm
                            td Beginners Sparring

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday SUNDAY
                    tbody
                        tr
                            td
                            td CLOSED
        section#prices
            <a name="prices"></a>

            h2 pricing
            div
                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2") Price Per Week (Direct debit through Debit Success, no contract term, includes all classes)
                    tbody
                        tr
                            td ADULT
                            td $20
                        tr
                            td CHILD
                            td $15

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2") Casual Price Per Class (cash only, no fee for open mat classes)
                    tbody
                        tr
                            td ADULT
                            td $20
                        tr
                            td CHILD
                            td $10

        section#contact
            <a name="contact"></a>

            h2 find us

            div
                p
                    span 10 Drury Street,
                    br
                    span &nbsp;New Lynn,
                    br
                    span &nbsp;Auckland,
                    br
                    span &nbsp;0600

                div#map

        footer
            p To BE the best you have to BEAT the best... so come TRAIN WITH the BEST. Welcome to STRIKE FORCE...

        include ../include/after.jade
        include ../include/fbanalytics.jade
        include ../include/googleanalytics.jade