html
    head

        <meta charset="utf-8">
        <title>Strikeforce Gym</title>
        <meta name="description" content="">
        <meta name="keywords" content="Muay Thai, MMA, Kickboxing">
        include ../include/head.jade
        <!-- Css -->
        <link href="css/canterbury.css" rel="stylesheet" type="text/css" />
        include ../include/fbanalytics.jade
        include ../include/googleanalytics.jade
    body
        header
            h1 Strikeforce Canterbury
            include ../include/tagline.jade
            ul#headerlinks
                include ./signup.jade
                include ./fblink.jade
                include ./phonelink.jade

        nav#menu
            ul
                li.drop
                    a(href="/") home
                li.drop
                    a(href="#timetable") timetable
                li.drop
                    a(href="#prices") pricing
                li.drop
                    a(href="#contact") address

        section#promo
            <iframe src="https://www.youtube.com/embed/AA7qgP62WXM" frameborder="0" allowfullscreen></iframe>


        section#timetable
            <a name="timetable"></a>
            div
                h2 Timetable
                    span &nbsp;(Christchurch, current to January 2016)

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday MONDAY
                    tbody
                        tr
                            td 9.30am
                            td Womans Boxfit (open to public, gold coin donation)
                        tr
                            td 10.30am
                            td
                        tr
                            td 4.00pm
                            td COLTS MMA (under 11-16yrs)
                        tr
                            td 5.00pm
                            td JUNIORS MMA (5-10yrs old)
                        tr
                            td 6.00pm
                            td Boxing Open (for all members)

                        tr
                            td 7.00pm
                            td MMA Open (for all members)


                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday TUESDAY
                    tbody
                        tr
                            td 5.30pm
                            td Submission Fighters (invitation only)
                        tr
                            td 6.00pm
                            td BJJ Open (for all members)

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday WEDNESDAY
                    tbody
                        tr
                            td 9.30am
                            td Open Fitness Circuit (members, non members $5)
                        tr
                            td 6.00pm
                            td Boxing Open (for all members)
                        tr
                            td 7.00pm
                            td Muay Thai (for all members)

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday THURSDAY
                    tbody
                        tr
                            td 5.30pm
                            td MMA Fighters (invitation only)
                        tr
                            td 6.30pm
                            td BJJ Open (for all members)

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday FRIDAY
                    tbody
                        tr
                            td 5.00pm
                            td Womans BoxFit (Non-Members $5 per class)
                        tr
                            td 6.00pm
                            td Muay Thai (for all members)

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday SATURDAY
                    tbody
                        tr
                            td 11.00am
                            td Boxing Fighters (invitation only)
                        tr
                            td 11.30am
                            td MMA Fighters (invitation only)
                        tr
                            td 12.01pm
                            td Open (for all members)

                table(align="center",border="0")
                    thead
                        tr
                            th(colspan="2").weekday SUNDAY
                    tbody
                        tr
                            td
                            td CLOSED



        section#prices
            <a name="prices"></a>

            h2 pricing
            div
                h3 Price Per Week
                ul
                    li Direct debit through Debit Success

                h3 short term
                table(align="center",border="0")
                    tbody
                        tr
                            td ADULT
                            td $25
                        tr
                            td CHILD
                            td $15

                h3 long term
                table(align="center",border="0")
                    tbody
                        tr
                            td ADULT
                            td $20
                        tr
                            td CHILD
                            td $10

                h3 Casual Price Per Class
                ul
                    li cash only

                table(align="center",border="0")
                    tbody
                        tr
                            td ADULT
                            td $30
                        tr
                            td CHILD
                            td $10

        section#contact
            <a name="contact"></a>

            h2 find us
            div
                p
                    span 295 Cashel St,
                    br
                    span &nbsp;Christchurch Central,
                    br
                    span &nbsp;8011
            div#map2

        footer
            p To BE the best you have to BEAT the best... so come TRAIN WITH the BEST. Welcome to STRIKE FORCE...

        include ../include/after.jade